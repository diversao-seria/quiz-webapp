<%= question_form.fields_for :alternatives do |alternative_form| %>
  <div class="form-row">
    <div class="col-md-8">
      <%= alternative_form.text_field :text, placeholder: 'Texto da alternativa', class: 'form-control' %>
    </div>
    <div class="col-md-4" align="left">
      <%= alternative_form.check_box :correct, class: 'form-control' %>
    </div>
  </div>
<% end %>
