<h1>Criação de Novo Quiz</h1>

<%= form_for @quiz do |f| %>
  <%= @quiz.errors.full_messages.first if @quiz.errors.any? %>
  <p>
    <%= f.label :user_id, 'Usuário' %><br>
    <%= f.text_field(:user_id, {:class => 'form-control'}) %>
  </p>

  <p>
    <%= f.label :title, 'Título do Quiz' %><br>
    <%= f.text_area(:title, {:class => 'form-control'}) %>
  </p>

  <div id="questions"></div>

  <%= link_to "Adicionar Nova Pergunta", show_question_path, :remote => true, :class => 'btn btn-primary' %>

  <hr>
  <p>
    <%= f.submit({:class => 'btn btn-success'})%>
  </p>
<% end %>

  <hr>
<%= link_to 'Back', quizzes_path, :class => 'btn btn-primary' %>
