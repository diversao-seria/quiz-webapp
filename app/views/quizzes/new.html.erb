<h1>Quizzes#new</h1>
<p>Find me in app/views/quizzes/new.html.erb</p>

<%= form_for @quiz do |f| %>
  <%= @quiz.errors.full_messages.first if @quiz.errors.any? %>
  <p>
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id%>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>

  <%= link_to "Question", show_question_path, :remote => true %>
  
  <div id="questions"></div>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', quizzes_path %>
