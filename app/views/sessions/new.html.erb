<%= form_for :session, url: sign_in_path do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Log in" %>
  </div>

  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
<% end %>
