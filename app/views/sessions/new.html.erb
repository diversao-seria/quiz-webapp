<%= form_for :session, url: sign_in_path do |f| %>
  <div class="nav">
    <h1>Fa√ßa login</h1>
  </div>
  <div class="container login-container">
    <h3>Conecte-se com seus dados</h3>
    <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class:'form-control' %>
    <%= f.label :email, 'Escreva seu email' %>

    <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class:'form-control' %>
    <%= f.label :password, 'Escreva sua senha' %>

    <br>
    <%= f.submit "Entrar", class: 'btn btn-primary' %>
  <div>

  <br>
  <%= link_to "Cadastre-se", new_user_path %>
<% end %>
